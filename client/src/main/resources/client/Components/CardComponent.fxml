<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="cardFrame" alignment="CENTER" prefHeight="81.0" prefWidth="208.0" style="-fx-border-width: 1; -fx-border-color: black;" type="HBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <CheckBox mnemonicParsing="false">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </CheckBox>
      <VBox alignment="TOP_CENTER" prefHeight="103.0" prefWidth="141.0">
         <children>
            <TextField fx:id="tfTitle" prefHeight="18.0" prefWidth="141.0" style="-fx-alignment: center; -fx-background-color: transparent; -fx-border-color: transparent;" text="Card Title">
               <padding>
                  <Insets bottom="1.0" />
               </padding>
            </TextField>
            <TextField fx:id="tfDescription" prefHeight="39.0" prefWidth="134.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-alignment: center;" text="Card Description">
               <font>
                  <Font size="8.0" />
               </font>
            </TextField>
         </children>
         <HBox.margin>
            <Insets top="3.0" />
         </HBox.margin>
         <padding>
            <Insets left="5.0" right="2.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER_RIGHT" prefHeight="86.0" prefWidth="34.0">
         <children>
            <Button fx:id="btnDelete" mnemonicParsing="false" prefHeight="12.0" prefWidth="13.0" text="x">
               <font>
                  <Font size="10.0" />
               </font>
               <padding>
                  <Insets left="-1.0" right="-1.0" top="-1.0" />
               </padding>
            </Button>
            <HBox fx:id="hboxTags" alignment="CENTER_RIGHT" prefHeight="66.0" prefWidth="19.0" />
            <Button fx:id="btnEdit" mnemonicParsing="false" prefHeight="20.0" prefWidth="31.0" text="Edit">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
         </children>
      </VBox>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
   <padding>
      <Insets bottom="5.0" left="1.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
