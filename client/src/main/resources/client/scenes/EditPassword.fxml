<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.EditPasswordCtrl">
   <children>
      <VBox layoutX="43.0" layoutY="48.0" prefHeight="302.0" prefWidth="503.0">
         <children>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="503.0">
               <children>
                  <Label fx:id="editPassLabel" text="Do you want to edit the password?">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="72.0" prefWidth="503.0">
               <children>
                  <Label fx:id="passLabel" prefHeight="26.0" prefWidth="101.0" text="Password:">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="256.0">
                     <children>
                        <Label fx:id="warning1" prefHeight="18.0" prefWidth="375.0" textFill="#bc1a1a" />
                        <TextField fx:id="password1" prefHeight="26.0" prefWidth="257.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="503.0">
               <children>
                  <Label fx:id="verifyLabel" prefHeight="26.0" prefWidth="147.0" text="Verify password:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <VBox prefHeight="70.0" prefWidth="262.0">
                     <children>
                        <Label fx:id="warning2" prefHeight="18.0" prefWidth="335.0" textFill="#b71919" />
                        <TextField fx:id="password2" prefHeight="26.0" prefWidth="306.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets right="45.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="70.0" prefWidth="503.0" spacing="20.0">
               <children>
                  <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" prefHeight="26.0" prefWidth="140.0" text="Cancel" />
                  <Button fx:id="edit" mnemonicParsing="false" onAction="#editPassword" prefHeight="26.0" prefWidth="140.0" text="Edit" />
                  <Button fx:id="remove" mnemonicParsing="false" onAction="#removePassword" prefHeight="26.0" prefWidth="140.0" text="Remove password" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
