               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="113.0" prefWidth="539.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="68.0" prefWidth="298.0">
                     <children>
                        <Label fx:id="warning" prefHeight="18.0" prefWidth="538.0" textFill="#e71515" />
                        <TextField fx:id="password" prefHeight="26.0" prefWidth="193.0" style="-fx-background-radius: 7; -fx-border-radius: 7; -fx-border-color: black; -fx-background-color: white;" />
