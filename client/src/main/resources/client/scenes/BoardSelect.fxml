<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.BoardSelectCtrl">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="170.0">
               <opaqueInsets>
                  <Insets right="20.0" />
               </opaqueInsets>
               <children>
                  <Label text="Enter one of your boards" />
                  <ListView fx:id="list" prefHeight="373.0" prefWidth="170.0" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="400.0" prefWidth="436.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="403.0">
                     <children>
                        <Label text="Join an already exisiting board">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </Label>
                        <HBox prefHeight="35.0" prefWidth="403.0">
                           <children>
                              <Label prefWidth="187.0" text="Enter the key">
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="boardKey" prefHeight="25.0" prefWidth="400.0" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </HBox>
                        <Button fx:id="join" mnemonicParsing="false" onMouseClicked="#join" text="Join">
                           <VBox.margin>
                              <Insets left="355.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="50.0" />
                     </padding>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="69.0">
                     <children>
                        <Label prefWidth="149.0" text="Or">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </Label>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Button fx:id="create" mnemonicParsing="false" onMouseClicked="#goCreate" prefHeight="25.0" prefWidth="228.0" text="Create a new board">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="55.0" prefWidth="403.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#back" text="Back" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
